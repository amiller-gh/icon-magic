{
  "name": "@icon-magic/server",
  "version": "2.0.0",
  "description": "Icon magic API server.",
  "main": "dist/src/index.js",
  "author": "Adam Miller <adam@pages.me>",
  "license": "MIT",
  "scripts": {
    "serve": "node ./dist/src/index.js",
    "start": "yarn run serve & yarn run watch",
    "watch": "watch 'yarn run test' './src' './test' --wait=1",
    "test": "yarn run build & mocha --opts test/mocha.opts dist/test",
    "build": "yarn run lint & tsc -p tsconfig.json & cp -r ./test/fixtures ./dist/test",
    "lint": "tslint -t msbuild --project . -c tslint.json"
  },
  "dependencies": {
    "express": "^4.16.4"
  },
  "devDependencies": {
    "@types/express": "^4.16.0"
  }
}
