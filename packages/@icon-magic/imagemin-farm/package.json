{
  "name": "@icon-magic/imagemin-farm",
  "version": "2.0.0",
  "description": "Icon magic image minification farm.",
  "main": "dist/src/index.js",
  "author": "Adam Miller <adam@pages.me>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "yarn run watch",
    "watch": "watch 'yarn run test' './src' './test' --wait=1",
    "pretest": "yarn run build & yarn run lint",
    "test": "mocha --opts test/mocha.opts dist/test",
    "prebuild": "rm -rf ./dist",
    "build": "tsc -p tsconfig.json",
    "postbuild": "cp -r ./test/fixtures ./dist/test",
    "lint": "tslint -t msbuild --project . -c tslint.json"
  },
  "dependencies": {
    "debug": "^4.1.0",
    "imagemin": "^6.0.0",
    "imagemin-advpng": "^4.0.0",
    "imagemin-optipng": "^6.0.0",
    "imagemin-pngcrush": "^5.1.0",
    "imagemin-zopfli": "^5.1.0"
  }
}
